  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug CLI command",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "preLaunchTask": "Build CLI",
      "program": "${workspaceFolder}/main.go",
      "args": "${input:cliArgs}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
      //"env": {
      //  "BTP_USERNAME": "firstname.lastname@sap.com",
      //  "BTP_PASSWORD": "password", // THIS WILL BE VISIBLE IN YOUR DEBUG CONSOLE
      //  "BTP_GLOBALACCOUNT": ""
      //},
    },
  ],
  "inputs": [
    {
      "id": "cliArgs",
      "type": "promptString",
      "description": "Args for launching btptf CLI. Use --cwd to set the working directory.",
      "default": "export-by-json -d 5cdf9dfc-2f5e-4717-a988-2848312f2f63 -p btpResources_Dir_test_roles.json"
    }
  ]
}
